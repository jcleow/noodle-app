crossorigin="anonymous"
/>
<link rel="stylesheet" href="styles.css" />

<head>
    <title>Recipes Containing <%=type%></title>
</head>
<nav class="navbar navbar-expand-sm fixed-top bg-light">
    <a class="navbar-brand">Noodles App</a>
    <div>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/"> Home </a>
        </li>

        <% for(let i = 1; i<5; i+=1){ %>
        <li class="nav-item">
          <a class="nav-link" href="/recipe/<%=i%>"> Recipe <%=i%> </a>
        </li>
        <% }; %>

        <li class="nav-item">
          <a class="nav-link" href="/category/chicken"
            >Chicken Recipes</a
          >
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/category/onion">Onion Recipes</a>
        </li>
      </ul>
    </div>
  </nav>



<body>
      <div class= "container">
        <div class="row">
            <div class="col recipeHeader">
              
            <h1>Chicken Noodles Ingredients</h1>
        </div>
    </div>

    <div>
        <ul> Recipes Containing <%=type%>
          <% if(type === "chicken"){ %>
            <% chicken.forEach((recipe,index)=>{ %>
             <li><a href="/recipe/<%=chicken[index].number%>"> Recipe <%=chicken[index].number%> - <%=chicken[index].name%></a></li> 
            <% })} else { %>
            <% onion.forEach((recipe,index)=>{ %>
             <li><a href="/recipe/<%=onion[index].number%>"> Recipe <%=onion[index].number%> - <%=onion[index].name%></a></li> 
            <% })} %>
        </ul>
        <p>
            <a href="/">Go back to main page</a>
        </p>
    </div>
</body>
